<h1>All Anecists</h1>

<ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
  <% @users.each do |user| %>
    <li>
      <ul>
        <% if user.image? %>
        <li><%= link_to (image_tag user.image.url), user %></li>
        <% else %>
        <li><%= link_to (image_tag user.image_link), user %></li>
        <% end %>
        <li><%= link_to user.username, user %></li>
        <li><%= link_to user.tagline, user %></li>
      </ul>
    </li>
  <% end %>
</ul>