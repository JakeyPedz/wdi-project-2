<p id="notice"><%= notice %></p>

<p>
  <strong>El Vibe:</strong>
  <%= @category.name %>
</p>

<ul>
  <% @category.stories.each do |story| %>
  <li>
    <ul>

    <li><%= link_to (image_tag story.user.image.thumb.url) %></li>

      <li><%= story.user.username %></li>
      <li><%= story.title %></li>
      <li><%= story.content %></li>
    </ul>
  </li>
  <% end %>
</ul>

<% if current_user %>
<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Destroy', @category, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', categories_path %>

