<div class="row">
<p id="notice"><%= notice %></p>

<p>
  <strong>Lolcation:</strong>
  <%= @location.name %>
</p>

<p>
  <strong>Anecjokes:</strong>
  <ul>
  <% @location.stories.each do |story| %>
    <li><%= link_to story.title, story %> by <%= story.user.username %></li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>

<div id="mapShow"></div>

<script type="text/javascript">
  var latLng = {lat: <%= @location.latitude %>, lng: <%= @location.longitude %>},
      map,
      marker;
  function initMap() {
    map = new google.maps.Map(document.getElementById('mapShow'), {
      center: latLng,
      zoom: 15,
      styles: jake_style
    });

    marker = new google.maps.Marker({
      position: latLng,
      map: map,
      title: 'Hello World!', 
      icon: "http://i.imgur.com/d9296D8.png"
    });
  }
</script>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAOMfikVQx8Z0_BR3gFrP2RoQz9QD7Krvk&callback=initMap">
</script>
</div>
