<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :location_ids, "Choose locations" %><br>
    <%= f.collection_select :location_ids, Location.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :category_ids, "Choose vibe" %><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit class: "button expand" %>
  </div>
<% end %>
